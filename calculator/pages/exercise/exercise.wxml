<!--pages/exercise/exercise.wxml-->
<view class='box'>
  <form bindsubmit="formsubmit">
    <view class="item">
      <text space="nbsp"> 性别</text>
      <radio-group bindchange="handleChange">
	      <radio value="male">男生</radio>
	      <radio value="female">女生</radio>
      </radio-group>
    </view>

    <view class="item">
      <text space="nbsp"> 身高</text>
      <input type="number" name='HeightInput' placeholder="请输入"></input>
      <text space="nbsp">厘米 </text>
    </view>

    <view class="item">
      <text space="nbsp"> 体重</text>
      <input type="digit" name='WeightInput' placeholder="请输入"></input>
      <text space="nbsp">千克 </text>
    </view>
    
    <view class="item">
      <text space="nbsp"> 肺活量</text>
      <input type="number" name='LungInput' placeholder="请输入"></input>
      <text space="nbsp">毫升 </text>
    </view>

    <view class="item">
      <text space="nbsp"> 坐位体前屈</text>
      <input type="digit" name='SitandreachInput' placeholder="请输入"></input>
      <text space="nbsp">厘米 </text>
    </view>

    <view class="item">
      <text space="nbsp"> 立定跳远</text>
      <input type="number" name='JumpInput' placeholder="请输入"></input>
      <text space="nbsp">厘米 </text>
    </view>

    <view class="item">
      <text space="nbsp"> 50米跑</text>
      <input type="digit" name='meterInput50' placeholder="请输入"></input>
      <text space="nbsp">秒 </text>
    </view>

    <view class="item">
      <text space="nbsp"> 800米/1000米跑</text>
      <input type="number" name='longmeterInput' placeholder="请输入"></input>
      <text space="nbsp">秒 </text>
    </view>

    <view class="item">
      <text space="nbsp"> 仰卧起坐/引体向上</text>
      <input type="number" name='situppullupInput' placeholder="请输入"></input>
      <text space="nbsp">次 </text>
    </view>

    <view class="submit-button">
      <button style="margin: 5% 23.7%" form-type="submit" type="primary" bindtap="ToResult">提交</button>
      <button style="margin: 5% 23.7%" form-type="reset" type="default">重置</button>
    </view>
  </form>
</view>
